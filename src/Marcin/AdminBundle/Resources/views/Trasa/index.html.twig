                                Salon <span class="badge">{{ sal.count.all_sal }}</span>
                            </a>
                        </div>
                       {# <div class="col-xs-4 col-md-2 col-lg-2 padding-bottom-15">
                            <a class="btn btn-block btn-primary" href="{{ path('marcin_admin_trasa_tuchowska') }}">
                                Tuchowska <span class="badge">{{ tuch.count.all_tuch }}</span>
                            </a>
